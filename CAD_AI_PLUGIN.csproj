<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <OutputType>Library</OutputType>
    <PlatformTarget>x64</PlatformTarget>

    <!-- Prevent GitHub from compiling all *.cs by default -->
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>

    <RootNamespace>CAD_AI_PLUGIN</RootNamespace>
    <AssemblyName>CAD_AI_PLUGIN</AssemblyName>

    <GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
  </PropertyGroup>

  <!-- AutoCAD 2025 DLL REFERENCES -->
  <ItemGroup>
    <Reference Include="acmgd">
      <HintPath>AutoCAD_References\acmgd.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <Reference Include="acdbmgd">
      <HintPath>AutoCAD_References\acdbmgd.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <Reference Include="accoremgd">
      <HintPath>AutoCAD_References\accoremgd.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <!-- GitHub should compile ONLY these files -->
  <ItemGroup>
    <Compile Include="PLUGIN.cs" />
    <Compile Include="Class1.cs" />
    <Compile Include="Class2.cs" />
    <Compile Include="Class3.cs" />
  </ItemGroup>

  <!-- DO NOT INCLUDE ChatGPTPalette.cs in GitHub build -->
  <ItemGroup>
    <None Include="ChatGPTPalette.cs" />
  </ItemGroup>

</Project>



