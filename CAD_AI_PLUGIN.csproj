<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <OutputType>Library</OutputType>
    <PlatformTarget>x64</PlatformTarget>

    <!-- Prevent GitHub from auto-including all .cs files -->
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>

    <RootNamespace>CAD_AI_PLUGIN</RootNamespace>
    <AssemblyName>CAD_AI_PLUGIN</AssemblyName>
  </PropertyGroup>

  <!-- Include ONLY PLUGIN.cs -->
  <ItemGroup>
    <Compile Include="PLUGIN.cs" />
  </ItemGroup>

  <!-- AutoCAD references -->
  <ItemGroup>
    <Reference Include="acmgd">
      <HintPath>AutoCAD_References\acmgd.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <Reference Include="acdbmgd">
      <HintPath>AutoCAD_References\acdbmgd.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <Reference Include="accoremgd">
      <HintPath>AutoCAD_References\accoremgd.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

</Project>

