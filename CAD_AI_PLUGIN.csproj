<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <OutputType>Library</OutputType>
    <PlatformTarget>x64</PlatformTarget>

    <RootNamespace>CAD_AI_PLUGIN</RootNamespace>
    <AssemblyName>CAD_AI_PLUGIN</AssemblyName>

    <GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
  </PropertyGroup>


  <!-- AutoCAD 2025 local references -->
  <ItemGroup>
    <Reference Include="acmgd">
      <HintPath>AutoCAD_References\acmgd.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <Reference Include="acdbmgd">
      <HintPath>AutoCAD_References\acdbmgd.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <Reference Include="accoremgd">
      <HintPath>AutoCAD_References\accoremgd.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>


  <!-- WebView2 -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.2651.64" />
  </ItemGroup>


  <!-- System -->
  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="System.Drawing" />
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>


  <!-- Include PLUGIN.cs explicitly -->
  <ItemGroup>
    <Compile Include="PLUGIN.cs" />
  </ItemGroup>

</Project>
